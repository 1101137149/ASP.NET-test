@model IEnumerable<FinalASP.Models.ms_data>

@{
    ViewBag.Title = "Index";
}

<h2>歡迎來到留言板</h2>

<h3>
    @Html.ActionLink("新增留言", "Create")
</h3>
<table class="table">
    <tr>
        <th>
            留言者
        </th>
        <th>
            留言者_信箱
        </th>
        <th>
            留言內容
        </th>
        <th>
            留言時間
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.message)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.time)
        </td>
        <td>
            @Html.ActionLink("編輯留言", "Edit", new { id=item.id }) |
            @Html.ActionLink("詳細資料", "Details", new { id=item.id }) |
            @Html.ActionLink("刪除留言", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
